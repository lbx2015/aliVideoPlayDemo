<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_adv_picture_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_adv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/alivc_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_count_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/alivc_adv_picture_top_margin"
            android:layout_marginRight="@dimen/alivc_adv_picture_right_margin"
            android:background="@drawable/alivc_fillet_bg_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/alivc_adv_picture_left_padding"
            android:paddingTop="@dimen/alivc_adv_picture_top_padding"
            android:paddingRight="@dimen/alivc_adv_picture_right_padding"
            android:paddingBottom="@dimen/alivc_adv_picture_bottom_padding"
            android:textSize="14sp" />

    </RelativeLayout>

</merge>